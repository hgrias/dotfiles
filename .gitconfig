[user]
	name = Harrison Grias
	email = harrison.grias@gmail.com

[core]
	editor = vim

[init]
	defaultBranch = main

[sequence]
	editor = rebase-editor -c "^M,^G,^c"

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true		# use n and N to move between different sections
	side-by-side = true

	# delta detects terminal colors automatically; set one of these to disable auto-detection
	# dark = true
	# light = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default